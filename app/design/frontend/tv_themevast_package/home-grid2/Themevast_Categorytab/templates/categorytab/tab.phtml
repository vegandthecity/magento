				setTimeout(function () {
					$('.cattabFirst_loading', $tv).remove();
					_tvcattab_active.removeClass('cattab_item_preload');
					CattabSlider($('.cattab_items_inner', _tvcattab_active));
					SliderBestCat($('.cattab_items_inner', _tvcattab_active));
				}, 500);
				
			}

