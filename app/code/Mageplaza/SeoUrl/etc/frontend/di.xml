<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Catalog\Model\Layer\Filter\Item">
        <plugin name="seo_url_item" type="Mageplaza\SeoUrl\Plugin\Filter\Item" sortOrder="-1"/>
    </type>
    <type name="Magento\Swatches\Block\LayeredNavigation\RenderLayered">
        <plugin name="seo_url_item_swatch" type="Mageplaza\SeoUrl\Plugin\Filter\Swatch" sortOrder="-1"/>
    </type>
    <type name="Magento\Catalog\Block\Product\ProductList\Toolbar">
        <plugin name="seo_url_toolbar" type="Mageplaza\SeoUrl\Plugin\Filter\Toolbar" sortOrder="-1"/>
    </type>
    <type name="Magento\Theme\Block\Html\Pager">
        <plugin name="seo_url_pager" type="Mageplaza\SeoUrl\Plugin\Filter\Pager" sortOrder="-1"/>
    </type>
    <type name="Magento\ConfigurableProduct\Block\Product\View\Type\Configurable">
        <plugin name="seo_url_option_config"
                type="Mageplaza\SeoUrl\Plugin\Block\Product\View\Type\Configurable"/>
    </type>
</config>
