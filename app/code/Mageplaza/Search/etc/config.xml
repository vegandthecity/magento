<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mpsearch>
            <general>
                <enabled>0</enabled>
                <max_query_results>10</max_query_results>
                <max_letter_numbers>97</max_letter_numbers>
                <display>price,image,description</display>
                <reindex_search>manual</reindex_search>
                <category>
                    <enable>1</enable>
                    <max_depth>2</max_depth>
                </category>
                <search_by>
                    <enable>1</enable>
                    <sort_by>new_products</sort_by>
                </search_by>
            </general>
        </mpsearch>
    </default>
</config>
